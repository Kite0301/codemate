<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= profile_image_for @user %>
        <%= @user.name %>

        

      </h1>
      <p><%= @user.profile %></p>

    </section>
  </aside>
  <div class="span8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>

      </ol>
       <h3>お気に入りPOSTS</h3>
       <ol class="microposts">
         <%= render @user.favorite_posts %>
       </ol>  
       
      <%= will_paginate @posts %>
    <% end %>
  </div>

</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
