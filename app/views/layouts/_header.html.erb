<header class="navbar navbar-fixed-top navbar-inverse navbar-fixed-top">
  <!-- <div class="navbar-inner"> -->
    <div class="container header-contents">
      <%= link_to root_path, id: "main-logo" do %>
        <div class="title">CodeMate</div>
      <% end %>
      <nav>
        <ul class="nav pull-right">
          <li class="search-item">
            <%= form_tag search_path, method: :get do %>
            <div class="search-input">
              <%= text_field_tag :word, '', size: '80' %>
            </div>
            <button type="submit" class ="search-btn"><i class="fa fa-search"></i></button>
            <% end %>
          </li>
          <% if signed_in? %>
              <li class = "header-item"><%= link_to "マイページ", current_user %></li>
                 <li id="fat-menu" class="dropdown header-item">
            <a href="#" class="" data-toggle="dropdown">
              設定 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class = "header-item"><%= link_to "プロフィール変更", edit_user_path(current_user) %></li>
              <li class = "header-item"><%= link_to "パスワード変更", edit_password_user_path(current_user) %></li>
              <!-- <li class = "header-item"><%= link_to "アカウント削除", edit_user_path(current_user) %></li> -->
                 </li>
                  </ul>
              <li class = "header-item"><%= link_to "ログアウト", signout_path %></li>
           
       
          <% else %>
          <li class = "header-item"><%= link_to "新規登録", new_user_path %></li>
          <li class = "header-item"><%= link_to "ログイン", signin_path %></li>
          <li class = "header-item"><%= link_to "使い方", explanation_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  <!-- </div> -->
</header>