            </a>
            <ul class="dropdown-menu"> -->
              <li><%= link_to "マイページ", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li><%= link_to "ログアウト", signout_path %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "新規登録", new_user_path %></li>
          <li><%= link_to "ログイン", signin_path %></li>
          <li><%= link_to "使い方", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
