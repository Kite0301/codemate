<div class="post-show">
	<p id="notice"><%= notice %></p>
	<p>
		<h1>Question</h1>
		<div class="post-title">質問 :</div>
 		
		<%= link_to @post.title %>
		
	</p>

	<p>
	  <strong>質問内容:</strong>
	  <%= @post.content %>
	</p>

	<p>
	  <strong>User:</strong>
	  <%= @post.user.name %>
	</p>
</div>

<%= render @post.answers  %>

<%= render 'answers/form' %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
