<div class="post-show">
	<p id="notice"><%= notice %></p>
	<p>

		<h1>質問</h1>
		<div class="post-title">タイトル :</div>
	  <%= link_to @post.title, post_path %>


	</p>

	<p>
	  <strong>質問内容:</strong>
	  <%= @post.content %>
	</p>

	<p>
	  <strong>ユーザー:</strong>
	  <%= @post.user.name %>
	</p>
</div>
<% if signed_in?  %>
<%= render @post.answers  %>

<%= render 'answers/form' %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>
