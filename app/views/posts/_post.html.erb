<% if(post.title) %>
<div class ="post-form">
<li>
  <%= link_to profile_image_for(post.user) %>
 <span class="title">タイトル: <%= link_to post.title, post %></span><br> 
  
  <% if current_user %>
    <span id="post_<%= post.id %>">
      <%= render 'favorites/favorite_btn', post: post %>
    </span>
  <% end %>

  <div id="favorite_<%= post.id %>" class="favorite-count">
    <%= pluralize(post.favorites.count, "favorite") %>
  </div>
  
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  
  <% if current_user?(post.user) %>
    <br><%= link_to "投稿を削除", post, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: post.content %>
  <% end %>
  
</li>
</div>

<% end %>